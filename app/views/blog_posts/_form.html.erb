<%= form_with model: @blog_post do |form| %>
    <% if form.object.errors.any?%>
        <div>
         <% form.object.errors.full_messages.each do |message| %>
            <div> <%= message %> </div>    
        <% end %>
        </div>
    <%end%>

    <div class="flex items-center mb-4">
        <div class="w-1/5">
            <%= form.label :title, class: "font-bold " %>
        </div>
        <div class="w-4/5">
            <%= form.text_field :title, class: "w-full rounded-lg border-gray-200 align-top shadow-sm sm:text-sm", placeholder: "Enter your title..." %>
        </div>    
    </div>

    <div class="flex my-8">
        <div class="w-1/5">
            <%= form.label :content, class: "font-bold" %>
        </div>
        <div class="w-4/5">
            <%= form.rich_text_area :content, class:"my-4 w-full rounded-lg border-gray-200 align-top shadow-sm sm:text-sm", placeholder:"Enter any additional order notes...", id: "OrderNotes", rows: "4" %>
        </div>
    </div>

    <div class="flex">
        <div class="w-1/5">
            <%= form.label :cover_image, class: "font-bold"%>
        </div>    
        <div class="w-4/5">
            <% if @blog_post.cover_image.present? %>
            <%= link_to "Remove cover image", blog_post_cover_image_path(blog_post), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded shadow  no-underline" %> 
            <% end %>
            <%= form.file_field :cover_image %>
            <% if @blog_post.cover_image.present? %>
                    <%= image_tag @blog_post.cover_image, class: "w-1/3 mt-8" %>
            <% end %>
        </div>
    </div>

    <div class = "flex mt-8">
        <div class="w-1/5">
            <%= form.label "video:", class: "font-bold" %>
        </div>
        <div class="w-4/5">
            <%= form.file_field :video %>
        </div>
    </div>

    <div class = "flex my-8">
        <div class="w-1/5">
            <%= form.label :published_at, class: "font-bold" %> 
        </div>
        <div class="w-4/5">
            <%= form.datetime_select :published_at, include_blank: true%>
        </div>
    </div>


    <div class="bg-transparent hover:bg-gray-100 text-blue-700 font-semibold py-2 px-4 border border-blue-500 rounded mb-20 w-1/5">
        <%= form.button %> 
    </div>
<%end%>
