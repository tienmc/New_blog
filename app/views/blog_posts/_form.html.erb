<%= form_with model: @blog_post do |form| %>
    <% if form.object.errors.any?%>
        <div>
         <% form.object.errors.full_messages.each do |message| %>
            <div> <%= message %> </div>    
        <% end %>
        </div>
    <%end%>

    <div>
        <%= form.label :title, class: "font-bold " %>
        <%= form.text_field :title, class:"my-4 w-full rounded-lg border-gray-200 align-top shadow-sm sm:text-sm", placeholder:"Enter your title..." %>
    </div>

    <div class = "my-8">
        <%= form.label :content, class: "font-bold" %>
        <%= form.rich_text_area :content, class:"my-4 w-full rounded-lg border-gray-200 align-top shadow-sm sm:text-sm", placeholder:"Enter any additional order notes...", id: "OrderNotes", rows: "4" %>
    </div>

    <div>
        <%= form.label :cover_image, class: "font-bold"%>
        <% if @blog_post.cover_image.present? %>
            <div class="flex items-center" id = "<%= dom_id(blog_post, :cover_image)%>">
                <%= image_tag @blog_post.cover_image, class: "w-1/3" %>
                <%= link_to "Remove cover image", blog_post_cover_image_path(blog_post), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded shadow ml-8 no-underline" %>
            </div>
        <% end %>
        <%= form.file_field :cover_image %>
    </div>

    <div class = "mt-8">
        <%= form.label :video, class: "font-bold" %>
        <%= form.file_field :video %>
    <div>

    <div class = "my-8">
        <%= form.label :published_at, class: "font-bold" %> 
        <%= form.datetime_select :published_at, include_blank: true%>
    </div>

    <div class="bg-transparent hover:bg-gray-100 text-blue-700 font-semibold py-2 px-4 border border-blue-500 rounded float-right">
        <%= form.button %> 
    </div>
<%end%>
